<% if(message){ %>
    <div class="alert alert-danger" role="alert">
       <%= message %>
    </div>
<%}%>

<form action="/<%=id%>/apply" method="post" enctype="multipart/form-data" class="applyform">
    <h1 class="mb-3">Enter your details</h1>
    <div class="mb-3">
        <label for="name">Name</label>
        <input type="text" class="form-control inputbox" id="name" name="name" placeholder="Enter your name">
    </div>
    <div class="mb-3">
        <label for="email">Email</label>
        <input type="email" class="form-control inputbox" id="email" name="email" placeholder="Enter your email">
    </div>
    <div class="mb-3">
        <label for="contact">Contact</label>
        <input type="number" class="form-control inputbox" id="contact" name="contact"placeholder="+91____ __ ____">
    </div>
    <div class="form-group">
        <label for="resume">Resume</label>
        <input
          type="file"
          class="form-control inputbox"
          name="resume"
          id="resume"
          accept="uploads/*"
          />
      </div>
    <button type="submit" class="btn btn-primary mt-3">Submit</button>
</form>
