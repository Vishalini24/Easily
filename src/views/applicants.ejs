
<a href="/<%=jobId%>/viewDetails" class="pagingbuttton ms-4 mt-5"><i class="fa-solid fa-arrow-left"></i> Back to job</a>
<h1 class="mb-4 mt-3 ms-4">Applicant Details</h1>
<table class="table">
    <thead>
        <tr>
            <th>Serial No</th>
            <th>Name</th>
            <th>Email</th>
            <th>Contact</th>
            <th>Resume</th>
            <th>Actions</th>
        </tr>
    </thead>
    <% applicants.forEach(applicant => { %>
        <tbody>
            <tr>
                <td><%=applicant.applicantid%></td>
                <td><%=applicant.name%></td>
                <td><%=applicant.email%></td>
                <td><%=applicant.contact%></td>
                <td>
                    <a href="/<%= applicant.resumePath %>" target="_blank">
                        <button class="btn btn-primary">View Resume</button>
                    </a>
                </td>
                <td>
                    <a  href="/<%=jobId%>/update/<%=applicant.applicantid%>/"  class="btn btn-primary">Edit</a>
                    <form method="POST" action="/<%=jobId%>/delete/<%=applicant.applicantid%>?_method=DELETE" onsubmit="return confirm('Are you sure you want to delete this applicant?');">
                        <button type="submit" class="btn btn-danger mt-2">Delete</button>
                    </form>
                </td>
            </tr>
        </tbody>
    <% }) %>
</table>